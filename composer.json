{
    "name": "twent/hw8",
    "description": "Console chat on Unix socket",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Twent\\Chat\\": "src/"
        }
    },
    "authors": [
        {
            "name": "twent",
            "email": "i@twent.ru"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-sockets": "*",
        "ext-pcntl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "nunomaduro/phpinsights": "^2.7"
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
