<?xml version="1.0"?>

<ruleset  name="PHP_CodeSniffer">
    <description>PHPCS configuration file.</description>
    <file>src</file>
    <file>public</file>
    <file>tests</file>

    <!-- exclude our migrations directory from the violation check-->
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- ignore warnings and display ERRORS only -->
    <arg  value="np"/>

    <rule  ref="PSR1"/>

    <rule  ref="PSR12"/>

    <rule ref="Generic.PHP.ForbiddenFunctions">
        <properties>
            <property name="forbiddenFunctions" type="array" value="eval=>NULL,dd=>NULL,dump=>NULL,die=>NULL,var_dump=>NULL,sizeof=>count,delete=>unset,print=>echo,create_function=>NULL"/>
        </properties>
    </rule>
</ruleset>
