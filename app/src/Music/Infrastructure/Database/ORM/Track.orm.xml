<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Music\Domain\Entity\Track" table="music_track">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <sequence-generator sequence-name="music_track_seq" allocation-size="1" initial-value="1" />
        </id>

        <field name="name" column="name" type="string" />
        <field name="author" column="author" type="string" />
        <field name="duration" column="duration" type="integer" />

        <many-to-one field="genre" target-entity="Genre">
            <cascade><cascade-remove /></cascade>
            <join-column name="genre_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>
    </entity>


</doctrine-mapping>