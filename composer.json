{
    "name": "qa/users",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-sqlite3": "*",
        "php-di/php-di": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "src\\": "src/",
            "tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "DNickolay",
            "email": "d.niknik@gmail.com"
        }
    ],
    "scripts": {
        "tests": [
            "./vendor/bin/phpunit tests/"
        ],
        "tsh": [
            "./vendor/bin/phpunit tests/ | egrep 's,|s:|s)|OK|FAIL'"
        ],
        "cli-run": [
            "php -f index.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^10.2"
    }
}
